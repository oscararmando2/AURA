# AURA STUDIO Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000

# Session Secret (IMPORTANT: Change this in production!)
# Generate a strong random string for production
SESSION_SECRET=your-secure-random-secret-key-here

# MercadoPago Configuration
# Get your access token from: https://www.mercadopago.com.mx/developers/panel/credentials
# The access token is used in the Authorization header: Bearer <token>
# For testing: Use TEST-xxxx token (e.g., TEST-1234567890-abcdef...)
# For production: Use APP-xxxx token (e.g., APP-1234567890-abcdef...)
# See docs/MERCADOPAGO_ACCESS_TOKEN_SETUP.md for detailed setup instructions
MERCADO_PAGO_ACCESS_TOKEN=your-access-token-here

# Base URL for callbacks (use your production URL when deploying)
# This URL is used by Mercado Pago to redirect users after payment
# For local development: http://localhost:3000
# For production: https://aura-eta-five.vercel.app (or your deployment URL)
BASE_URL=http://localhost:3000

# ========== PHP Invoice System Configuration ==========

# MySQL Database Configuration
# IMPORTANT: Never use default credentials in production!
DB_HOST=localhost
DB_USER=invoice_user
DB_PASS=your-secure-password-here
DB_NAME=el_mexiquense_market

# Authentication Required (set to 'true' to require login for PHP endpoints)
# When enabled, users must be authenticated to access buscar.php, guardar_factura.php, etc.
AUTH_REQUIRED=false
